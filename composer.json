{
    "name": "antodippo/testing-playground",
    "description": "Testing playground with mutation tests",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Antonello D'Ippolito",
            "email": "antonellodippolito@gmail.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "ext-pdo": "*"
    },
    "require-dev": {
        "bmitch/churn-php": "^1.6",
        "infection/infection": "~0.24",
        "phpspec/phpspec": "^7.0",
        "phpunit/phpunit": "^10.5"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "infection/extension-installer": true
        }
    }
}
